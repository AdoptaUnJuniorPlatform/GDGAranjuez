---
// src/layouts/Layout.astro
import '@styles/global.css';
import Navbar from '../components/Navbar.astro';
const { title = 'GDG Aranjuez ' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/gdg-favicon.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Google+Sans:wght@400;500;700&display=swap');
    </style>
    <script is:inline>
      document.documentElement.classList.toggle(
        'dark',
        localStorage.theme === 'dark' ||
          (!('theme' in localStorage) &&
            window.matchMedia('(prefers-color-scheme: dark)').matches)
      );
    </script>
  </head>

  <body
    class="bg-gradient-to-br from-gray-50 to-blue-50
	dark:bg-gradient-to-br dark:from-blue-950 dark:to-gray-900
  	min-h-screen transition-colors duration-300 font-['Google_Sans']"
  >
    <Navbar />
    <slot />
   <footer class="flex flex-col items-center justify-center bg-cadetblue p-5 text-center">
  <div class="flex gap-5 mb-2">
    <a href="https://facebook.com" target="_blank" aria-label="Facebook">
      <img src="/iconos/facebook.svg" alt="Facebook" class="w-6 h-6" />
    </a>
    <a href="https://instagram.com" target="_blank" aria-label="Instagram">
      <img src="/iconos/instagram.svg" alt="Instagram" class="w-6 h-6" />
    </a>
    <a href="https://www.linkedin.com" target="_blank" aria-label="LinkedIn">
      <img src="/iconos/linkedin.svg" alt="LinkedIn" class="w-6 h-6" />
    </a>
  </div>
  <p class="text-sm text-gray-700">&copy; 2025 Todos los derechos de autor reservados.</p>
</footer>
