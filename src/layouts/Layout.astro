---
// src/layouts/Layout.astro
import '@styles/global.css';
import Navbar from '../components/Navbar.astro';
const { title = 'GDG Aranjuez ' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Google+Sans:wght@400;500;700&display=swap');
    </style>
    <script is:inline>
      document.documentElement.classList.toggle(
        'dark',
        localStorage.theme === 'dark' ||
          (!('theme' in localStorage) &&
            window.matchMedia('(prefers-color-scheme: dark)').matches)
      );
    </script>
  </head>

  <body
    class="bg-gradient-to-br from-gray-50 to-blue-50
	dark:bg-gradient-to-br dark:from-blue-950 dark:to-gray-900
  	min-h-screen transition-colors duration-300 font-['Google_Sans']"
  >
    <Navbar />
    <slot />
    <footer>
      <footer class="footer">
        <div class="social-icons">
          <a
            href="https://facebook.com"
            target="_blank"
            aria-label="Facebook"
          >
            <img src="/iconos/facebook.svg" alt="Facebook" />
          </a>
          <a
            href="https://instagram.com"
            target="_blank"
            aria-label="Instagram"
          >
            <img src="/iconos/instagram.svg" alt="Instagram" />
          </a>
          <a
            href="https://www.linkedin.com/company/gdg-aranjuez/posts/?feedView=all"
            target="_blank"
            aria-label="LinkedIn"
          >
            <img src="/iconos/linkedin.svg" alt="LinkedIn" />
          </a>
        </div>
        <p>&copy; 2025 Todos los derechos reservados.</p>

        <style>
          .footer {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background-color: cadetblue;
            padding: 20px;
            text-align: center;
          }

          .social-icons {
            display: flex;
            gap: 20px;
            margin-bottom: 10px;
          }

          .social-icons img {
            width: 24px;
            height: 24px;
          }

          footer p {
            font-size: 0.9rem;
            color: #555;
            margin: 0;
          }
        </style>
      </footer>
    </footer>
    <script type="module" src="/themeToggle.js"></script>
  </body>
  <footer></footer>
</html>
