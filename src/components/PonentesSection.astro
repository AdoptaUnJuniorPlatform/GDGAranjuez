---
import Ponente from './Ponente.astro';
const ponentes = [
  {
    nombre: 'Ponente pendiente',
    cargo: '',
    foto: 'https://via.placeholder.com/150',
    redes: {
      twitter: '#',
      linkedin: '#',
    },
  },
  {
    nombre: 'Ponente pendiente',
    cargo: '',
    foto: 'https://via.placeholder.com/150',
    redes: {
      twitter: '#',
      linkedin: '#',
    },
  },
  {
    nombre: 'Ponente pendiente',
    cargo: '',
    foto: 'https://via.placeholder.com/150',
    redes: {
      twitter: '#',
      linkedin: '#',
    },
  },
];

const estilosPonentes = {
  sombra: 'shadow-lg hover:shadow-2xl',
};
---

<section id="ponentes" class="p-10 scroll-mt-24">
  <h2
    class="text-4xl dark:text-sky-100 font-bold font-mono
    text-center mb-8"
  >
    Ponentes
  </h2>

  <div class="flex flex-wrap justify-center gap-8">
    {
      ponentes.map((pon) => (
        <Ponente
          nombre={pon.nombre}
          cargo={pon.cargo}
          foto={pon.foto}
          redes={pon.redes}
          estilos={estilosPonentes}
        />
      ))
    }
  </div>
</section>
