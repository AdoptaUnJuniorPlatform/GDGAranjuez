---
import Charlas from './Charlas.astro';

const temas = [
  {
    titulo: 'Título de charla por confirmar',
    descripcion: 'Descripción pendiente de confirmar.',
    ponente: 'Ponente pendiente',
    foto: 'https://api.dicebear.com/9.x/identicon/svg?radius=50&seed=ponente1',
  },
];
---

<section id="charlas" class="p-10 scroll-mt-24">
  <h2
    class="text-4xl dark:text-sky-100 font-bold font-mono
    text-center mb-8"
  >
    Charlas del Evento
  </h2>

  <div class="flex flex-wrap justify-center gap-8">
    {
      temas.map((charla) => (
        <Charlas
          titulo={charla.titulo}
          descripcion={charla.descripcion}
          ponente={charla.ponente}
          foto={charla.foto}
        />
      ))
    }
  </div>
</section>
