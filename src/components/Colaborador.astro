---
import Socials from './Socials.astro';
const { nombre, rol, foto, redes } = Astro.props;
---

<article
  class="max-w-55 bg-gray-200 dark:bg-gray-600/50 rounded-2xl
  p-5 text-center transition-all duration-300 hover:-translate-y-2
  shadow-md hover:shadow-xl w-full"
>
  <img
    src={foto}
    alt={`Foto de ${nombre}`}
    class="w-34 h-34 mx-auto rounded-full mb-4 object-cover transition-all duration-300 hover:scale-105"
  />
  <h3
    class="text-lg text-gray-950 dark:text-violet-50
    font-semibold underline"
  >
    {nombre}
  </h3>
  <p class="text-sm text-gray-700 dark:text-violet-100 mb-4"
    >{rol}</p
  >

  <Socials nombre={nombre} {...redes} />
</article>
