---
interface Props {
  url: string;
  title: string;
  excerpt: string;
  date: Date;
  author: string;
  authorImage: string;
  tags?: string[];
}

const {
  url,
  title,
  excerpt,
  date,
  author,
  authorImage,
  tags = [],
} = Astro.props;
const formattedDate = new Date(date).toLocaleDateString(
  'es-ES',
  {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }
);
---

<article
  class="bg-gray-100 dark:bg-gray-900
  rounded-2xl shadow-md transition-all hover:-translate-y-1 hover:shadow-lg hover:transition-shadow duration-300"
>
  <a href={url} class="block p-6">
    <div class="flex items-center mb-4">
      <img
        src={authorImage}
        alt={`Foto de ${author}`}
        class="w-10 h-10 rounded-full mr-3"
        width="40"
        height="40"
      />
      <div>
        <p
          class="text-sm font-medium text-gray-900 dark:text-gray-100"
        >
          {author}
        </p>
        <p class="text-xs text-gray-500 dark:text-gray-200">
          {formattedDate}
        </p>
      </div>
    </div>

    <h3
      class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-2"
    >
      {title}
    </h3>
    <p class="text-gray-600 dark:text-gray-200 mb-4">{excerpt}</p
    >

    {
      tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span
              class="text-xs px-3 py-1 bg-purple-100 text-purple-800 rounded-full
              dark:bg-purple-800/50 dark:text-purple-50"
            >
              {tag}
            </span>
          ))}
        </div>
      )
    }
  </a>
</article>
