---
export interface Props {
  url: string;
  title: string;
  excerpt: string;
  date: Date;
  author: string;
  authorImage: string;
  tags?: string[];
}

const {
  url,
  title,
  excerpt,
  date,
  author,
  authorImage,
  tags = [],
} = Astro.props;

const formattedDate = new Date(date).toLocaleDateString(
  'es-ES',
  {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }
);
---

<article
  class="bg-gray-100 dark:bg-gray-900 w-full max-w-sm
  rounded-2xl shadow-md transition-all hover:-translate-y-1 hover:shadow-lg hover:transition-shadow duration-300"
>
  <a href={url} class="block p-6">
    <div class="flex items-center mb-4">
      <img
        src={authorImage}
        alt={`Foto de ${author}`}
        class="w-12 h-12 rounded-full mr-3"
        width="40"
        height="40"
      />
    </div>
  </a>
</article>
