<style>
  html,
  body {
    height: 100%;
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  header {
    background-color: #004080;
    color: white;
    text-align: center;
    padding: 1rem;
  }

  main {
    flex: 1;
    padding: 2rem;
    background-color: white;
  }

  footer {
    background-color: #222;
    color: #ccc;
    text-align: center;
    padding: 1rem;
    font-size: 0.9rem;
    border-top: 4px solid #000;
  }

  .social-icons {
    margin-bottom: 0.5rem;
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .social-icons img {
    filter: brightness(0) invert(1); /* cambia Ã­conos oscuros a blanco */
    transition: transform 0.2s ease;
  }

  .social-icons img:hover {
    transform: scale(1.2);
  }

  footer p {
    margin: 0;
  }
</style>

