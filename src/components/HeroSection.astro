          stroke-linejoin="round"
          stroke-width="2"></path>
        <path
          d="M8.99316 4V7.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"></path>
        <path
          d="M8.99316 16.5V20"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"></path>
        <path
          d="M15.025 9.32991L15.645 10.5799C15.705 10.6999 15.825 10.7899 15.955 10.8099L17.335 11.0099C17.675 11.0599 17.815 11.4799 17.565 11.7199L16.565 12.6899C16.465 12.7799 16.425 12.9199 16.445 13.0599L16.685 14.4299C16.745 14.7699 16.385 15.0299 16.085 14.8699L14.855 14.2199C14.735 14.1599 14.585 14.1599 14.465 14.2199L13.235 14.8699C12.925 15.0299 12.575 14.7699 12.635 14.4299L12.875 13.0599C12.895 12.9199 12.855 12.7899 12.755 12.6899L11.765 11.7199C11.515 11.4799 11.655 11.0599 11.995 11.0099L13.375 10.8099C13.515 10.7899 13.625 10.7099 13.685 10.5799L14.295 9.32991C14.435 9.01991 14.875 9.01991 15.025 9.32991Z"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"></path>
      </svg>
    </button>

    <!-- Call for Papers Button -->
    <button
      id="cfp-button"
      aria-label="Botón para Call for Papers"
      class="group text-xl md:text-2xl text-gray-700 dark:text-gray-200 m-3 px-6 py-2
        font-medium rounded-full border-2 border-blue-600
        hover:bg-gray-100 dark:hover:bg-gray-600
        transition-all duration-300 hover:shadow-lg hover:cursor-pointer
        flex items-center gap-3 whitespace-nowrap min-w-max
        focus:ring-2 dark:focus:ring-sky-400 focus:ring-offset-2 focus:ring-offset-white dark:focus:ring-offset-gray-900"
      onclick="window.open('https://sessionize.com/devfest-aranjuez-2025/', '_blank')"
    >
      <span class="whitespace-nowrap">Call For Papers</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="group-hover:animate-spin w-9 h-9 stroke-gray-900 dark:stroke-white"
        viewBox="0 0 24 24"
        fill="none"
      >
        <path
          d="M16 8V8C16.93 8 17.395 8 17.7765 8.10222C18.8117 8.37962 19.6204 9.18827 19.8978 10.2235C20 10.605 20 11.07 20 12V18C20 19.1046 19.1046 20 18 20V20C16.8954 20 16 19.1046 16 18V7.2C16 6.07989 16 5.51984 15.782 5.09202C15.5903 4.71569 15.2843 4.40973 14.908 4.21799C14.4802 4 13.9201 4 12.8 4H7.2C6.07989 4 5.51984 4 5.09202 4.21799C4.71569 4.40973 4.40973 4.71569 4.21799 5.09202C4 5.51984 4 6.07989 4 7.2V16.8C4 17.9201 4 18.4802 4.21799 18.908C4.40973 19.2843 4.71569 19.5903 5.09202 19.782C5.51984 20 6.07989 20 7.2 20H18"
          stroke-width="2"></path>
        <path
          d="M12 8H8V12H12V8Z"
          stroke-width="2"
          stroke-linejoin="round"></path>
        <path
          d="M8 16H12"
          stroke-width="2"
          stroke-linecap="round"></path>
      </svg>
    </button>
