    {
      agenda.map((item) => (
        <li class="mb-6 text-lg">
          <strong class="font-mono">{item.hora}</strong> –{' '}
          <em class="underline">{item.titulo}</em>
          <br />
          {item.ponente && <span>Ponente: {item.ponente}</span>}
        </li>
      ))
