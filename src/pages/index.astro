---
import Agenda from '@/components/agenda.astro';
import CharlasSection from '@/components/CharlasSection.astro';
import ColaboradorSection from '@/components/ColaboradorSection.astro';
import OrganizadoresSection from '@/components/OrganizadoresSection.astro';
import Patrocinadores from '@/components/Patrocinadores.astro';
import PonentesSection from '@/components/PonentesSection.astro';
import PostsSection from '@/components/PostsSection.astro';
import Layout from '@/layouts/Layout.astro';
import Countdown from '@/components/Countdown.astro';
---

<Layout title="GDG Aranjuez | DevFest 2025">
  <main class="max-w-4xl mx-auto px-6 py-12 md:py-20">
    <!-- Hero Section -->
    <section class="text-center mb-16">
      <div
        class="inline-block bg-gradient-to-r from-blue-700 to-purple-700 text-white px-4 py-2 rounded-full mb-6"
      >
        <span class="text-lg font-medium">4 de Octubre 2025</span
        >
      </div>
      <!-- Countdown -->
      <Countdown />
      <h1
        class="text-4xl md:text-6xl font-bold font-mono text-gray-900 dark:text-indigo-50 mb-6 leading-tight"
      >
        ¡Vuelve el
        <span
          class="text-transparent bg-clip-text
          bg-gradient-to-r from-blue-700 to-purple-700
          dark:bg-gradient-to-r dark:from-blue-300 dark:to-purple-300"
        >
          DevFest Aranjuez!
        </span>

        <img
          src="/icons/cohete.png"
          alt="Icono cohete"
          class="inline-block w-12 h-12 ml-2 align-middle"
        />
      </h1>
      <p
        class="text-xl text-gray-700 dark:text-gray-50 max-w-2xl mx-auto mb-8"
      >
        Este 4 de octubre, te invitamos a uno de los mayores
        eventos de tecnología del año en Aranjuez.
      </p>

      <!-- CTA Button -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center"
      >
        <a
          href="#comunidad"
          class="px-8 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-medium rounded-lg
		  hover:shadow-lg hover:from-purple-700 hover:to-blue-700
		  dark:hover:from-purple-700 dark:hover:to-blue-700
		  transition-all duration-300"
        >
          ¡Quiero participar!
        </a>
        <a
          href="https://devfest-2024-aranjuez.vercel.app/"
          target="_blank"
          class="px-8 py-3 border-2 border-blue-600
          text-gray-700 dark:text-gray-200 font-medium rounded-lg
          hover:bg-gray-100 dark:hover:bg-gray-600
          transition-all duration-300 hover:shadow-lg"
        >
          Ver edición 2024
        </a>
      </div>
    </section>

    <!-- Detalles Evento -->
    <section
      id="comunidad"
      class="bg-white dark:bg-indigo-950 rounded-2xl
      shadow-md shadow-indigo-200 dark:shadow-indigo-800
	    p-8 mb-16"
    >
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h2
            class="text-2xl font-bold font-mono text-gray-800 dark:text-indigo-200 mb-4"
          >
            Comunidad vibrante
          </h2>
          <p class="text-gray-600 dark:text-gray-200 mb-6">
            Durante una jornada completa (de 09:30 a 17:30),
            reuniremos a desarrolladores, profesionales y
            entusiastas para sumergirse en aprendizaje práctico,
            colaboración e inspiración.
          </p>
          <ul class="space-y-3">
            <li class="flex items-start">
              <span
                class="text-blue-500 dark:text-indigo-400 mr-2"
                >✓</span
              >
              <span class="text-gray-700 dark:text-gray-300"
                >Charlas técnicas de primer nivel</span
              >
            </li>
            <li class="flex items-start">
              <span
                class="text-blue-500 dark:text-indigo-400 mr-2"
                >✓</span
              >
              <span class="text-gray-700 dark:text-gray-300"
                >Talleres prácticos</span
              >
            </li>
            <li class="flex items-start">
              <span
                class="text-blue-500 dark:text-indigo-400 mr-2"
                >✓</span
              >
              <span class="text-gray-700 dark:text-gray-300"
                >Networking con profesionales</span
              >
            </li>
          </ul>
        </div>

        <div
          class="bg-gray-100 rounded-xl overflow-hidden aspect-video"
        >
          <!-- Placeholder para imagen/video -->
          <div
            class="w-full h-full flex items-center justify-center bg-gradient-to-br from-blue-100 to-purple-100"
          >
            <img
              src="/img/DevFest2024.jpg"
              alt="Foto DevFest primera edición 2024"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Seccion de Organizadores -->
    <OrganizadoresSection />

    <!-- Seccion Charlas -->
    <CharlasSection />

    <!-- Seccion de Ponentes -->
    <PonentesSection />

    <!-- Seccion de Patrocinadores -->
    <Patrocinadores />

    <!-- Seccion de Colaboradores -->
    <ColaboradorSection />

    <!-- Agenda del evento -->
    <Agenda />
  </main>

  <!-- Blog -->
  <PostsSection />
</Layout>
