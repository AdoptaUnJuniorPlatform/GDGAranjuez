---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import PostCard from '@/components/PostCard.astro';
import Layout from '@/layouts/Layout.astro';

type Post = CollectionEntry<'posts'>;

const posts: Post[] = (await getCollection('posts'))
  .filter((post: Post) => post.data.date) // Filter posts without date
  .sort(
    (a: Post, b: Post) =>
      new Date(b.data.date).getTime() -
      new Date(a.data.date).getTime()
  );
---

<Layout title="Blog">
  <section
    class="py-16 rounded-2xl m-10
    max-w-4xl mx-auto px-6"
  >
    <div class="text-center mb-12">
      <h1
        class="text-4xl font-bold font-mono text-gray-900 dark:text-gray-200 mb-4"
      >
        Blog
      </h1>
      <p
        class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-12"
      >
        Espacio para tutoriales, reflexiones, not√≠cias y
        novedades de nuestra comunidad.
      </p>
    </div>

    <div class="flex flex-wrap justify-center gap-8">
      {
        posts.map((post: Post) => (
          <PostCard
            url={`/blog/${post.slug}`}
            title={post.data.title}
            excerpt={post.data.excerpt}
            date={post.data.date}
            author={post.data.author}
            authorImage={post.data.authorImage}
            tags={post.data.tags}
            isPlaceholder={post.data.isPlaceholder}
          />
        ))
      }
    </div>
  </section>
</Layout>
